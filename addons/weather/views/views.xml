<odoo>
  <data>
    <!-- explicit list view definition -->
  
    <record id="weather_list" model="ir.ui.view">
      <field name="name">weather list</field>
      <field name="model">weather.forecast</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="temp_show"/>
          <field name="humidity_show"/>
          <field name="clouds_show" />
          <field name="visibility_show"/>
          <field name="wind_speed_show"/>
          <field name="wind_deg_show" />
        </tree>
      </field>
    </record>
	
	

    <!-- actions opening views on models -->
    <record id="weather_city_act" model="ir.actions.act_window">
      <field name="name">weather forecast</field>
      <field name="res_model">weather.forecast</field>
      <field name="view_mode">tree,form</field>
    </record>
	
	 <menuitem id="weather_menu_root" name="Weather App" />
	 <menuitem id="weather_city_menu" name="Weather City" action="weather_city_act" parent="weather_menu_root" />
	 
	
