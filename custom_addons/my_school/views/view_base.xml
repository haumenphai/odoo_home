<odoo>
	<data>
		<record id="list_view_person" model="ir.ui.view">
			<field name="name">list view person</field>
			<field name="model">school.person</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
                    <field name="age" />
                    <field name="birth_day" />
                    <field name="address" />
                    <field name="gioi_tinh" />
				</tree>
			</field>
		</record>
		
		<record id="form_view_person" model="ir.ui.view">
			<field name="name">form view person</field>
			<field name="model">school.person</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="name" />
                    	    <field name="age" />
                    	    <field name="birth_day" />
                     	    <field name="address" />
                    	    <field name="gioi_tinh" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>