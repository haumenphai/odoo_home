<odoo>
    <record id="tree_view_weather_location" model="ir.ui.view">
        <field name="name">Location Forecast Tree View</field>
        <field name="model">weather.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="location_name"/>
                <field name="temp"/>
                <field name="humidity"/>
                <field name="clouds"/>
                <field name="pop"/>
            </tree>
        </field>
    </record>

    <record id="form_view_weather_location" model="ir.ui.view">
        <field name="name">Location Forecast Form View</field>
        <field name="model">weather.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <button string="Search Location" name="search_loaction" type="object"/>
                    <br/>
                    <field name="field_location_seach" placeholder="Search Location..."/>
                    <br/>

                    <group>
                        <field name="city_id"/>
                        <field name="location_name"/>
                    </group>
                </sheet>


            </form>
        </field>
    </record>


    <!-- actions opening views on models -->
    <record id="weather_location_act" model="ir.actions.act_window">
        <field name="name">Your Location 0Weather</field>
        <field name="res_model">weather.location</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="weather_location_update_act_server" model="ir.actions.server">
        <field name="name">Weather Location Update action server</field>
        <field name="model_id" ref="model_weather_location"/>
        <field name="state">code</field>
        <field name="code">
            action = model.update_weather()
        </field>
    </record>

    <menuitem id="weather_location_act_menu"
              name="Weather Location Forecast"
              parent="weather_menu_root"/>
    <menuitem id="your_location"
              name="Your Location"
              parent="weather_location_act_menu"
              action="weather_location_act"/>
    <menuitem id="weather_location_update"
              name="Update Weather Location"
              parent="weather_location_act_menu"
              action="weather_location_update_act_server"/>


</odoo>