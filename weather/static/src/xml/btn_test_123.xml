<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="ListView.buttons">
        <t t-jquery="div.o_list_buttons" t-operation="append" t-if="widget.modelName=='weather.forecast'">
           <button type="button" class="btn btn-primary btn_tomorrow_weather" accesskey="u">
                Tomorrow's Weather
            </button>
             <button type="button" class="btn btn-primary btn_current_weather" accesskey="u">
                Current Weather
            </button>
            <button type="button" class="btn btn-primary btn_update_weather" accesskey="u">
                Update Weather
            </button>
        </t>
    </t>
</templates>